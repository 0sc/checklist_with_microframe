<h2 class="center"><%= @list.name %></h2>

<div class="row">
  <h4>Item description:</h4>
  <p><%= @item.description %></p>
</div>

<div class="row">
  <p>
    <strong>Done:</strong>
    <%= @item.done %>
  </p>
</div>

<div class="row">
  <div class="col s4">
    <%= link_to 'Edit', "/lists/#{@list.id}/items/#{@item.id}/edit", class: "btn" %>
  </div>
  <div class="col s4">
    <%= link_to 'Delete', "/lists/#{@list.id}/items/#{@item.id}", method: :delete, class: 'btn waves-effect waves-light red'%>
  </div>
  <div class="col s4">
    <%= link_to 'Back', "/lists/#{@list.id}/items", class: "btn" %>
  </div>
</div>
