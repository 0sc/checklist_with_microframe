<h1 class="center">Microframe Checklist</h1>

<table class="striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= link_to list.name, "/lists/#{list.id}" %></td>
        <td><%= link_to 'Edit', "/lists/#{list.id}/edit", class: "btn-flat grey lighten-2" %></td>
        <td><%= link_to 'Destroy', list, method: :delete, class: 'btn waves-effect waves-light red' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List ', "/lists/new", class: "btn" %>
