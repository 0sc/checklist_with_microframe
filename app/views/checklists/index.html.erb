<p id="notice"><%= notice if notice %></p>

<h1>Listing Checklists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @checklists.each do |checklist| %>
      <tr>
        <td><%= checklist.name %></td>
        <td><%= link_to 'Show', "/checklists/#{checklist.id}" %></td>
        <td><%= link_to 'Edit', "/checklists/#{checklist.id}/edit" %></td>
        <td><%= link_to 'Destroy', checklist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Checklist', "/checklists/new" %>
